<h1 class="py-3">New Article</h1>

<%= form_for(@article) do |f| %>
    <%= f.label :title, class: "form-label", style: "font-weight: bold" %>
    <%= f.text_field :title, class: "form-control mb-2" %>

    <%= f.label :content, class: "form-label", id: "content-label" %>
    <div class="row border rounded mx-1">
      <div class="col-1">
        <p>1</p>
      </div>
      <div class="col-11 p-0">
        <%= f.text_field :content, id: "content-text-field" %>
      </div>
    </div>
    <%= f.submit class: " mt-3 btn btn-secondary" %>
<% end %>
